<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff"
    android:gravity="center"
    >


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp "
        android:src="@drawable/round_logo" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="4dp"
            android:drawableLeft="@drawable/ico_message"
            android:fontFamily="sans-serif-black"
            android:text="  7250767676"
            android:textColor="#0A71EF" />

        <TextView

            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:drawableLeft="@drawable/ico_phone"
            android:fontFamily="sans-serif-black"
            android:text="  9835024444"
            android:textColor="#0A71EF" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ico_email"
        android:fontFamily="sans-serif-black"
        android:text="  info@cimage.in"
        android:textColor="#0A71EF" />


</LinearLayout>